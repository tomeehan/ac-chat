<div class="card">
	<div class="card-header">
		<%= @chat_room.title %>
	</div>
	
	<div id="messages" data-chat-room-id="<%= @chat_room.id %>">
	  <%= render @chat_room.messages %>
	</div>
	
	<div class="card-footer send-message">
		<%= form_for @message, :html => {:autocomplete => "off"}, url: '#' do |f| %>
			<%= hidden_field_tag 'chat_room_id', @chat_room.id %>
			  <div class="form-group">
			    <%= f.label "Send message:" %>
			     <div class="input-group">
              <%= f.text_field :body, class: 'form-control' %>
              <div class="input-group-addon">
								<%= f.submit "Send", class: 'btn btn-primary' %>
              </div>
            </div>
			    <small class="text-muted">Between 2 to 1000 characters. Use markdown to format your messages, <a href="https://github.com/adam-p/markdown-here/wiki/Markdown-Cheatsheet">click here for cheatsheet</a>.</small>            
        </div>
			<% end %>
		</div>
	</div>
</div>

<br>
<p class="shared-links">
	<a href="/chat_rooms">Back</a>
</p>