	<div class="chat-title">
		<h2><%= @chat_room.title %></h2>
	</div>
<div class="chat">
	
	<div id="messages" data-chat-room-id="<%= @chat_room.id %>">
	  <%= render @chat_room.messages %>
	</div>
	
	<hr>
	
	<%= form_for @message, url: '#' do |f| %>
	  <%= hidden_field_tag 'chat_room_id', @chat_room.id %>
	  <div class="form-group">
	    <%= f.label "Send message:" %>
	    <%= f.text_field :body, class: 'form-control' %>
	    <small class="text-muted">Between 2 to 1000 characters</small>
	  </div>
	
	  <%= f.submit "Send", class: 'btn btn-primary btn-lg' %>
	<% end %>
</div>
<br>
<a href="/chat_rooms">Back</a>
